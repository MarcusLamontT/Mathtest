import random

def main():
    
    counter = 0
    averageRight = 0.0
    right = 0.0
    number1 = 0
    answer = 0.0



    while counter <5:
        number1 = getNumbers()
        answer = getAnswer(answer)
        right = checkAnswer(number1, answer, right)
        counter = counter + 1


def getNumbers():
    number1 = random.randint(1, 5)

    return number1 

def getAnswer(answer):
    print("\n")
    print("One of these 5 cups are poisoned pick one to drink out of to advance, avoid the poison 5 times and you win!")
    print("")
    answer = int(input("Which cup do you choose? "))
    print("")
    return answer

def checkAnswer(number1, answer, right):
    if answer != number1:
        print("YOU ADVANCED!")
        print("The cup with the poison was cup number", number1)
        right = right + 1
    elif answer == number1:
        print("YOU DRANK THE POISON!")
        input("Would you like to try again?")
        if "yes":
            checkAnswer(number1, answer, right)
        else:
            break
    return right

def printGrats():
