import random

def main():
    
    counter = 0
    averageRight = 0.0
    right = 0.0
    number1 = 0
    answer = 0.0
    endProgram = "no"
    retry = "no"

    while endProgram == "no":
        while counter <1:
            number1 = getNumbers()
            answer = getAnswer(answer)
            right = checkAnswer(number1, answer,)
            counter = counter + 1

            endProgram = input("Do you want to end program? (Enter yes or no): ")

def getNumbers():
    number1 = random.randint(1, 2)

    return number1 

def getAnswer(answer):
    print("\n")
    print("One of these two cups are poisoned, pick the correct one you win!")
    print("")
    answer = int(input("Which cup do you choose? "))
    print("")
    return answer

def checkAnswer(number1, answer):
    if answer != number1:
        print("YOU WIN!")
    elif answer == number1:
        print("YOU DRANK THE POISON!")
        
main()
